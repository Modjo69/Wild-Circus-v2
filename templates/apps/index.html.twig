{% extends 'base.html.twig' %}

{% block title %}My Apps{% endblock %}

{% block body %}

    <h1 class="text-center m-5">All my apps</h1>
    </div>
    {% for app in apps %}
        <div class="article m-5 shadow-sm" style="border: 1px solid burlywood ">
        {% if loop.index  %2 ==1 %}

                <div class="media ">
                    <div class="media-body  text-center m-auto ">
                        <h2>{{ app.name }}</h2>

                        <p class="m-auto w-50 text-center">{{ app.description }}</p>
                        <br>
                        <a>{{ app.link }}</a>
                    </div>
                    <img class="" src="{{ app.picture }}">
                </div>


            {% else %}
                <div class="media ">
                <img class=" " src="{{ app.picture }}">
                <div class="media-body text-center m-auto ">
                    <h2>{{ app.name }}</h2>
                    <p class="m-auto w-50 text-center">{{ app.description }}</p>
                    <br>
                    <a >{{ app.link }}</a>
                </div>
            </div>
        {% endif %}
    </div>

    {% endfor %}
{% endblock %}
